<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.NoneTranslucent" parent="AppTheme.Base">
        <item name="android:windowIsTranslucent">false</item>


    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    </style>

    <style name="textTittle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextLarge">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextNormal">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextMedium">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextSmall">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textLittleTittle">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textLittleSub">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textSub">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textTittleWhite" parent="textTittle">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textSubWhite" parent="textSub">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="separatorHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/horizontal_separate_line_height</item>
        <item name="android:background">@color/separate_line_color</item>
    </style>

    <style name="separatorVertical">
        <item name="android:layout_width">@dimen/vertical_separate_line_width</item>
        <item name="android:layout_height">@dimen/vertical_separate_line_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/separate_line_color</item>
    </style>

    <style name="dividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/horizontal_divider_line_height</item>
        <item name="android:background">@color/divider_color</item>
    </style>



</resources>
