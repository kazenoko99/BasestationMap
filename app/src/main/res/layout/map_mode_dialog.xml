<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

<RelativeLayout
     android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="80dp">

    <RadioGroup
      android:id="@+id/map_style_radios"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_margin="2dp"
      android:paddingTop="8dp"
      android:paddingBottom="4dp">

      <RadioButton
          android:id="@+id/map_style_normal"
          android:drawableTop="@drawable/selector_mode_normal"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:paddingTop="3dp"
          android:paddingBottom="3dp"
          android:layout_marginLeft="12dp"
          android:layout_marginRight="12dp"
          android:gravity="center|bottom"
          android:text="普通视图"
          android:checked="true"
          android:textColor="@drawable/selector_map_mode_color"
          android:button="@null">
      </RadioButton>
      <RadioButton
          android:id="@+id/map_style_satelite"
          android:paddingTop="3dp"
          android:paddingBottom="3dp"
          android:layout_marginLeft="12dp"
          android:layout_marginRight="12dp"
          android:drawableTop="@drawable/selector_mode_satellite"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:gravity="center|bottom"
          android:text="卫星视图"
          android:textColor="@drawable/selector_map_mode_color"
          android:button="@null"/>
      <RadioButton
          android:id="@+id/map_style_3d"
          android:drawableTop="@drawable/selector_mode_3d"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="wrap_content"
          android:paddingTop="3dp"
          android:paddingBottom="3dp"
          android:layout_marginLeft="12dp"
          android:layout_marginRight="12dp"
          android:gravity="center|bottom"
          android:text="3D视图"
          android:textColor="@drawable/selector_map_mode_color"
          android:textAlignment="center"
          android:button="@null"/>
  </RadioGroup>

  <View
      android:layout_below="@+id/map_style_radios"
      android:layout_width="match_parent"
      android:layout_alignRight="@+id/map_style_radios"
      android:layout_alignLeft="@+id/map_style_radios"
      android:background="@color/divider_color"
      android:layout_marginLeft="5dp"
      android:layout_marginRight="5dp"
      android:layout_height="1px"/>

  <LinearLayout
      android:layout_below="@+id/map_style_radios"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_alignRight="@+id/map_style_radios"
      android:layout_alignLeft="@+id/map_style_radios"
      android:orientation="horizontal">
    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
  <CheckBox
      android:id="@+id/show_traffic"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:text="交通路况"
      android:textColor="@drawable/selector_map_mode_color"
       />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">
      <CheckBox
          android:id="@+id/show_maptext"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:text="地图标注"
          android:textColor="@drawable/selector_map_mode_color"
          />
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
      <TextView
          android:id="@+id/screen_shoot"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:text="截图"
          android:textSize="15sp"

          />
    </FrameLayout>
  </LinearLayout>
</RelativeLayout>
  </android.support.v7.widget.CardView>