<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/offline_map_city_item_height">

    <TextView
        android:id="@+id/group_text"
        style="@style/TextLarge"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/offline_map_city_item_title_margin_left"
        android:maxWidth="@dimen/offline_map_city_item_title_width"
        android:gravity="center_vertical"/>

    <ImageView
        android:id="@+id/group_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/offline_map_city_item_crtl_text_margin_right"
        android:layout_centerVertical="true"/>

</RelativeLayout>