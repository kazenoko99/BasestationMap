<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/toptab"
        android:paddingTop="25dp"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@color/blue"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/drawer_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/main_search_view_padding_left"
            android:paddingEnd="@dimen/main_search_view_icon_padding"
            android:src="@drawable/mz_titlebar_ic_list_dark"
            android:tint="@color/white"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/titile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"
            android:text="网络制式"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            app:tabIndicatorHeight="4dp"
            app:tabIndicatorColor="@color/blue_light"
            app:tabSelectedTextColor="@color/white"
            app:tabTextColor="@color/gray"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/settings_city_change_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mz_item_background">

        <TextView
            android:id="@+id/settings_city_change_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_list_item_text_margin_top"
            android:includeFontPadding="false"
            android:text="@string/settings_city_change"/>

        <TextView
            android:id="@+id/settings_city_change_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/settings_city_change_title"
            android:layout_marginBottom="@dimen/setting_list_item_text_margin_bottom"
            android:includeFontPadding="false" />

        <ImageView
            android:layout_width="@dimen/setting_next_btn_width"
            android:layout_height="@dimen/setting_next_btn_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/setting_next_btn_margin_right"/>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toptab"
        />
</LinearLayout>