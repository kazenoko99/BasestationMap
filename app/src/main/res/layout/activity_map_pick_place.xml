<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wenruisong.basestationmap.activity.MapPickPlaceActivity">
    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/blue"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/mz_titlebar_ic_back"
            />
        <TextView
            android:id="@id/activity_title"
            android:layout_toRightOf="@+id/btn_back"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="地图选点"
            android:textColor="@color/white"
            />
        </RelativeLayout>
    <com.wenruisong.basestationmap.map.CustomizedMapView
        android:id="@+id/customized_mapview"
        android:layout_below="@+id/top_layout"
        android:layout_above="@+id/address_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.wenruisong.basestationmap.map.CustomizedMapView>



    <RelativeLayout
        android:id="@+id/address_layout"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:layout_height="65dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/comfirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:text="确定选点"
            android:textSize="16sp"
            android:textColor="@color/blue"/>
        <TextView
            android:layout_toLeftOf="@+id/comfirm"
            android:layout_marginLeft="5dp"
            android:id="@+id/map_bottom_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            style="@style/TextNormal"
            android:includeFontPadding="false"/>


        <TextView
            android:layout_toLeftOf="@+id/comfirm"
            android:id="@+id/map_bottom_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/map_bottom_name"
            android:includeFontPadding="false"
            android:text="正在查找位置"
            android:lines="2"
            android:layout_marginLeft="5dp"
            android:paddingTop="@dimen/map_bottom_detail_padding_top"
            style="@style/TextMedium"
            android:textColor="@color/gray"/>
    </RelativeLayout>
</RelativeLayout>
