<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:background="@drawable/mz_item_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/titlePic"
            android:layout_width="@dimen/common_address_left_pic_size"
            android:layout_height="@dimen/common_address_left_pic_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/common_address_left_pic_margin_left"
            android:background="@null"
            android:src="@drawable/home" />

        <RelativeLayout
            android:id="@+id/group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common_address_text_margin_left_right"
            android:layout_marginRight="@dimen/common_address_text_margin_left_right"
            android:background="@null"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/common_address_title_text_size" />

            <TextView
                android:id="@+id/addressName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title"
                android:layout_below="@+id/title"
                android:layout_marginTop="@dimen/common_address_address_margin_top"
                android:gravity="top"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/address_color"
                android:textSize="@dimen/search_history_address_text_size" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

